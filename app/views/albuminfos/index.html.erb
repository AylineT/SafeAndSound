  <% @albuminfos.each do |albuminfo| %>

      <div class="album">

        <img src="<%= albuminfo.cover %>">

        <div class="liste_index">

          <div class="ligne1">
            <div class="titre">
              <%= albuminfo.title %>
            </div>
            <div class="artiste">
              <%= albuminfo.artists %>
            </div>
          </div>

          <div class="ligne2">
            <div class="durÃ©e">

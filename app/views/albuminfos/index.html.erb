              <%= albuminfo.tracks %> titres
            </div>
            <div class="release">
              <%= albuminfo.release %>
            </div>
          </div>

          <div class="options">
            <%= link_to 'Fiche album', albuminfo, :class => "btn"%>
            <%= link_to 'Modifier', edit_albuminfo_path(albuminfo), :class => "btn" %>
            <%= link_to 'Supprimer', albuminfo, :class => "btn", method: :delete, data: { confirm: 'Etes vous sÃ»r de vouloir supprimer ?' } %>
